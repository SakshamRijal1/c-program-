#include<stdio.h>
void reading(int a[][3]);
void processing(int a[][3]);
void displaying(int a[][3]);
int main()
{
	int a[2][3],i,j;
	reading(a);
	processing(a);
	printf(" the matrix is: \n");
	displaying(a);
	
}
void reading(int a[][3])
{
	int i,j;
	for(i=0;i<2;i++)
	{
		for(j=0;j<3;j++)
		{
			printf("\n Enter a[%d][%d]:",i,j);
			scanf("%d",&a[i][j]);
			
		}
	}
}
void processing(int a[][3])
{
		int i,j;
	for(i=0;i<2;i++)
	{
		for(j=0;j<3;j++)
		
		{
			a[i][j]=2*a[i][j];
		}}
			
			
	
}
void displaying(int a[][3])
{
		int i,j;
	for(i=0;i<2;i++)
	{
		for(j=0;j<3;j++)
		
		{
			printf("%d \t",a[i][j]);
		}
		printf("\n");
		}
			
			
	
}


